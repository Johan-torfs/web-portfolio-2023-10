---
interface Props {
    id: string;
}
const { id } = Astro.props;;
const url = `https://www.googletagmanager.com/gtag/js?id=${id}`;
---

<script async src={url} is:inline></script>

<script is:inline define:vars={{ id: id }}>
  (() => {
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag('js', new Date());
    gtag('config', id);
  })();
</script>